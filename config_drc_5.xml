<main>
<crap></crap>
<smoothfir>
  <globals>
    <float_bits>64</float_bits>
    <sampling_rate>44100</sampling_rate>
    <overflow_warnings>true</overflow_warnings>
    <overflow_control>true</overflow_control>
    <filter_length>
      <block_length>512</block_length>
      <n_blocks>16</n_blocks>
    </filter_length>
    <!--debug>true</debug-->
    <powersave>60</powersave>
    <!--show_progress>true</show_progress-->
  </globals>
  <coeff>
    <name>left</name>
    <filename>/home/raul/test_smoothfir/filter.wav</filename>
    <format>sndfile</format>
    <channel>0</channel>
    <!--skip>5</skip-->
    <shared_mem>true</shared_mem>
    <blocks>16</blocks>
    <!--attenuation>5.0</attenuation-->
  </coeff>
  <coeff>
    <name>right</name>
    <filename>/home/raul/test_smoothfir/filter.wav</filename>
    <format>sndfile</format>
    <channel>0</channel>
    <skip>500</skip>
    <shared_mem>true</shared_mem>
    <blocks>16</blocks>
    <!--attenuation>5.0</attenuation-->
  </coeff>
  <input> 
    <params>
      <clientname>smoothfir</clientname>
      <priority>65</priority>
      <port>
	<index>0</index>
	<localname>left</localname>
	<destname>system:capture_1</destname>
      </port>
      <port>
	<index>1</index>
	<localname>right</localname>
	<destname>system:capture_2</destname>
      </port>
    </params>
    <channel>
      <name>left</name>
      <mapping>0</mapping>
      <delay>0</delay>
    </channel>
    <channel>
      <name>right</name>
      <mapping>1</mapping>
      <delay>0</delay>
    </channel>
    <channel>
      <name>left_2</name>
      <mapping>0</mapping>
      <delay>0</delay>
    </channel>
    <channel>
      <name>right_2</name>
      <mapping>1</mapping>
      <delay>0</delay>
    </channel>
  </input>
  <output> 
    <params>
      <port>
	<index>0</index>
	<destname>system:playback_1</destname>
      </port>
      <port>
	<index>1</index>
	<destname>system:playback_2</destname>
      </port>
    </params>
    <channel>
      <name>left</name>
      <mapping>0</mapping>
      <!--delay>0</delay-->
    </channel>
    <channel>
      <name>right</name>
      <mapping>1</mapping>
      <!--delay>0</delay-->
    </channel>
  </output>
  <filter>
    <name>left</name>
    <coeff_name>left</coeff_name>
    <from_inputs>
      <name>left</name>
      <attenuation>0.0</attenuation>
      <name>right_2</name>
      <attenuation>0.0</attenuation>
    </from_inputs>
    <to_outputs>
      <name>left</name>
      <attenuation>0.0</attenuation>
    </to_outputs>
  </filter>
  <filter>
    <name>right</name>
    <coeff_name>right</coeff_name>
    <from_inputs>
      <name>right</name>
      <attenuation>0.0</attenuation>
      <name>left_2</name>
      <attenuation>0.0</attenuation>
    </from_inputs>
    <to_outputs>
      <name>right</name>
      <attenuation>0.0</attenuation>
    </to_outputs>
  </filter>
</smoothfir>
</main>
